@model TxtBlog.ViewModels.Items.PostViewModel
@using TxtBlog.ViewModels.Items


<div class="row">
    <div class="col-md-12">
        <section class="post">
            <section class="post-header">
                <h1>@Model.Title</h1>
                <p>Posted on <time datetime="@Model.PostDate">@Model.PostDate.ToString("MMMM d, yyyy")</time></p>
            </section>
            <section class="post-body">
                @Html.Raw(Model.Content)
            </section>
        </section>
    </div>
</div>